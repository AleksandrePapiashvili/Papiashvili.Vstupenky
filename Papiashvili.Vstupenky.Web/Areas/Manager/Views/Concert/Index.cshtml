@model IList<Concert>

@{
    ViewData["Title"] = "Concert Administration";
}
<h1>@ViewData["Title"]</h1>

<a asp-action="Create">Create Concert</a>
@{
    if (Model != null && Model.Count > 0)
    {
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">@nameof(Concert.Id)</th>
                    <th scope="col">@nameof(Concert.Nazev)</th>
                    <th scope="col">@nameof(Concert.Popis)</th>
                    <th scope="col">@nameof(Concert.Data)</th>
                    <th scope="col">@nameof(Concert.ImageSrc)</th>
                    <th scope="col">Delete</th>
                </tr>
            </thead>
            <tbody>
                @for (int i = 0; i < Model.Count; ++i)
                {
                    <tr>
                        <th scope="row">@Model[i].Id</th>
                        <td>@Model[i].Nazev</td>
                        <td>@Model[i].Popis</td>
                        <td>@Model[i].Data</td>
                        <td>@Model[i].ImageSrc</td>
                        <td><a asp-action="Delete" asp-route-Id="@Model[i].Id" onclick="return ConfirmDelete();">Delete</a></td>
                    </tr>
                }
            </tbody>
        </table>
    }
}

@section Scripts
{
    <script src="~/js/dialogs.js"></script>
}